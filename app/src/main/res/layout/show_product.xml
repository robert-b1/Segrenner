<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal"
            android:hint="Kod" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="140dp"
            android:gravity="center_horizontal"
            android:hint="Nazwa produktu" />

        <EditText
            android:id="@+id/kindPackage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="210dp"
            android:gravity="center_horizontal"
            android:hint="Rodzaj opakowania" />

        <EditText
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="280dp"
            android:gravity="center_horizontal"
            android:hint="Rodzaj produktu" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnScanAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="232dp"
            android:text="Skanuj Ponownie" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"
            android:layout_toStartOf="@+id/btnScanAgain"
            android:layout_toLeftOf="@+id/btnScanAgain"
            android:text="Edytuj Produkt" />
    </RelativeLayout>


</RelativeLayout>